<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".fragments.IntroFragment3">
    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/plane"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Safety is Our Priority"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Trust us to prioritize your safety with our stringent safety measures for a worry-free travel experience."
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/idBtnGetStart"
        android:layout_width="200dp"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:text="Get started"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_blue_sky"
        android:textColor="@color/white" />

</LinearLayout>